{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "shop",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "store_video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    },
    "postal_code": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "city": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "area_code": {
      "type": "integer",
      "required": true
    },
    "phone": {
      "type": "biginteger",
      "required": true
    },
    "highlights": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "short_description": {
      "type": "string",
      "required": true
    },
    "website": {
      "type": "string",
      "required": false
    },
    "labels": {
      "type": "enumeration",
      "enum": ["clothing", "groceries"],
      "required": true
    },
    "labels_icons": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"]
    },
    "opening_hours": {
      "type": "json"
    },
    "person": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::person.person",
      "inversedBy": "shop"
    }
  }
}
